# ========================================
# ContextViber Environment Variables
# ========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to Git!

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ContextViber
NEXT_PUBLIC_APP_VERSION=0.5.0-beta
NEXT_PUBLIC_APP_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_AI=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_AUTH=false

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_MAX_FILES=100
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.js,.jsx,.ts,.tsx,.json,.md,.css,.scss,.yaml,.yml,.env

# Simple Password Protection (Optional)
# Uncomment to enable basic password protection
# NEXT_PUBLIC_SITE_PASSWORD=your_secret_password_here

